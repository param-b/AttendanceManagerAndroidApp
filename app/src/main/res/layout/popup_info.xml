<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/popupframe"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        app:cardBackgroundColor="#FAFBFD"
        app:cardElevation="5dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#FAFBFD"
            >

            <EditText
                android:id="@+id/info_popup"
                android:layout_width="360dp"
                android:layout_height="150dp"
                android:layout_gravity="top|center"
                android:width="400dp"
                android:background="#ffffff"
                android:ems="10"
                android:hint="What did you study?"
                android:textColor="#000000"
                android:inputType="text"
                android:textSize="12sp" />

            <Button
                android:id="@+id/close_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:background="#ffffff"
                android:text="Close"
                android:textColor="#F30303" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:background="#ffffff"
                android:text="Okay"
                android:textColor="#CCFF90"
                android:id="@+id/save_popup"
                />



        </FrameLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>